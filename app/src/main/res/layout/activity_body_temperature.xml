<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BodyTemperatureActivity">





<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--      -->
<!--        android:fillViewport="true">-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rl"
        android:layout_margin="@dimen/_16sdp"
        >

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_16sdp"
            android:id="@+id/home_iv"
            android:background="@drawable/oval_shape"
            android:padding="@dimen/_8sdp"
            android:layout_centerVertical="true"
            app:tint="@color/white"
            android:src="@drawable/home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/home_iv"
            android:text="@string/body_temperature"
            android:layout_marginStart="@dimen/_8sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans_semibold"
            android:textSize="@dimen/_13ssp"/>


    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_below="@id/rl"
            android:layout_marginEnd="@dimen/_16sdp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_8sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:src="@drawable/thermometer" />


                        <TextView
                            android:id="@+id/tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Body Temperature C" />

                        <TextView
                            android:id="@+id/temperature_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/open_sans_semibold" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_8sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:textColor="@color/black"
                            android:text="Health Status" />

                        <TextView
                            android:id="@+id/fever_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv1"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:padding="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:fontFamily="@font/open_sans_semibold" />

                        <TextView
                            android:id="@+id/current_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/fever_tv"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:fontFamily="@font/open_sans_semibold" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                app:cardCornerRadius="@dimen/_5sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/_1sdp"
                        android:layout_weight="0.5"
                        android:background="@color/color_primary"
                        android:fontFamily="@font/open_sans_semibold"
                        android:gravity="center"
                        android:text="Past Measurements"
                        android:textColor="@color/white" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:background="@color/color_primary"
                        android:fontFamily="@font/open_sans_semibold"
                        android:gravity="center"
                        android:text="Temp ( \u2103)"
                        android:textColor="@color/white"

                        />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/readings_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_margin="@dimen/_8sdp"
                tools:listitem="@layout/custom_readings_layout" />


        </LinearLayout>


<!--    </ScrollView>-->

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_16sdp"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/purple_500"
        app:indicatorSize="@dimen/_22sdp"
        app:trackThickness="@dimen/_2sdp" />

</RelativeLayout>